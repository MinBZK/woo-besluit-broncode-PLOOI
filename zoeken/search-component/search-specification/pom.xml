<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>nl.overheid.koop.plooi</groupId>
		<artifactId>search-component-parent</artifactId>
		<version>1.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>search-specification</artifactId>
	<name>PLOOI Search service specification</name>

	<dependencies>
		<dependency>
			<groupId>nl.overheid.koop.plooi</groupId>
			<artifactId>metadata-specification</artifactId>
			<version>${metadata-specification.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-remote-resources-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>get-openapi-dependencies</id>
                        <goals>
                            <goal>process</goal>
                        </goals>
                        <configuration>
                            <resourceBundles>
                                <!-- search-specification depends on metadata-specification -->
                                <resourceBundle>nl.overheid.koop.plooi:metadata-specification:${metadata-specification.version}</resourceBundle>
                            </resourceBundles>
                        </configuration>
                    </execution>
                    <execution>
                        <id>prepare-openapi-dependency</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>bundle</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>**/openapi/*.yaml</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
			<plugin>
				<groupId>org.openapitools</groupId>
				<artifactId>openapi-generator-maven-plugin</artifactId>
				<version>${openapi-generator-maven-plugin.version}</version>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<inputSpec>${project.basedir}/src/main/resources/openapi/zoek-api.yaml</inputSpec>
							<generatorName>spring</generatorName>
                            <output>${project.build.directory}/generated-sources/</output>
                            <generateModels>true</generateModels>
                            <modelsToGenerate>interne-labels</modelsToGenerate>
                            <generateApis>false</generateApis>
                            <generateSupportingFiles>false</generateSupportingFiles>
							<modelPackage>nl.overheid.koop.plooi.search.model</modelPackage>
							<apiPackage>nl.overheid.koop.plooi.search.service</apiPackage>
                            <skipValidateSpec>true</skipValidateSpec>
                            <configOptions>
                            	<interfaceOnly>true</interfaceOnly>
                                <java11>true</java11>
                                <dateLibrary>java8</dateLibrary>
                                <openApiNullable>false</openApiNullable>
                                <documentationProvider>none</documentationProvider>
                                <annotationLibrary>none</annotationLibrary>
                            </configOptions>
                            <configHelp>false</configHelp>
                        </configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>